extends layout

block content
  // Página de entrada
  .login-screen#loginScreen
    .login-container
      .window-title ☢️ SALA DE CHAT LIYODEV ☢️
      .login-form
        h2.neon-text ¡BIENVENIDO A LA SALA!
        p.info-text Chat en tiempo real próximamente...
        p.info-text Por ahora disfruta del diseño retro 90s
        .button-group
          button#demoButton.retro-button VER DEMO
      .retro-info
        p.scroll-text 💀 CHAT LIYODEV 1995 STYLE 💀 DISEÑO RETRO AUTÉNTICO 💀

  // Interfaz demo del chat
  .main-interface#mainInterface(style="display: none;")
    .window-title
      span.title-text 💬 SALA DE CHAT LIYODEV - DEMO 
      button#backButton.exit-button ✖ VOLVER
    
    .chat-layout
      // Panel izquierdo - Chat principal
      .chat-panel
        .messages-container
          .messages-header
            span 📡 MENSAJES DEMO
            span#messageCount (3)
          #messages.messages
            .message.system
              span.timestamp [12:30]
              |  *** Sistema iniciado ***
            .message.received
              span.timestamp [12:31]
              span.username &lt;Usuario1&gt;
              |  ¡Hola! ¿Qué tal?
            .message.sent
              span.timestamp [12:32]
              |  ¡Muy bien! Me gusta este diseño retro
        
        .input-container
          .chat-input
            input#messageInput(type="text" placeholder="Escribe tu mensaje..." disabled)
            button#sendButton(disabled) ENVIAR
      
      // Panel derecho - Lista de usuarios y info
      .sidebar
        .users-container
          .users-header 👥 USUARIOS CONECTADOS
          #usersList.users-list
            .user-item
              span.user-status ●
              |  Usuario1
            .user-item
              span.user-status ●
              |  Tú (demo)
        
        .info-container
          .info-header 📊 ESTADÍSTICAS
          .stats
            .stat-item
              span.stat-label Usuarios:
              span.stat-value 2
            .stat-item
              span.stat-label Mensajes:
              span.stat-value 3
            .stat-item
              span.stat-label Uptime:
              span#uptime.stat-value 05:42

  script.
    const loginScreen = document.getElementById('loginScreen');
    const mainInterface = document.getElementById('mainInterface');
    const demoButton = document.getElementById('demoButton');
    const backButton = document.getElementById('backButton');
    let startTime = new Date();
    
    // Función para mostrar demo
    function showDemo() {
      loginScreen.style.display = 'none';
      mainInterface.style.display = 'block';
      updateUptime();
      setInterval(updateUptime, 1000);
    }
    
    // Función para volver
    function goBack() {
      mainInterface.style.display = 'none';
      loginScreen.style.display = 'flex';
    }
    
    // Función para actualizar uptime
    function updateUptime() {
      const now = new Date();
      const diff = Math.floor((now - startTime) / 1000);
      const minutes = Math.floor(diff / 60);
      const seconds = diff % 60;
      document.getElementById('uptime').textContent = 
        `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
    }
    
    // Event listeners
    demoButton.addEventListener('click', showDemo);
    backButton.addEventListener('click', goBack);
